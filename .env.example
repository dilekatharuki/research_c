# Environment Configuration Template
# Copy this file to .env and fill in your values

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=False

# Model Configuration
MODEL_NAME=bert-base-uncased
MAX_LENGTH=128
BATCH_SIZE=16
LEARNING_RATE=2e-5
EPOCHS=5

# Privacy Configuration
EPSILON=1.0
DELTA=1e-5

# Session Configuration
SESSION_TIMEOUT=3600  # seconds
MAX_SESSIONS=1000

# Integration URLs (for other components)
COMPONENT1_URL=http://localhost:8001
COMPONENT2_URL=http://localhost:8002
COMPONENT4_URL=http://localhost:8004

# Voice Configuration
TTS_RATE=150
TTS_VOLUME=0.9
STT_TIMEOUT=10

# Database Configuration (future use)
DATABASE_URL=sqlite:///./conversations.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=app.log

# CORS Configuration
CORS_ORIGINS=*

# Feature Flags
ENABLE_VOICE=True
ENABLE_INTEGRATION=True
ENABLE_ANALYTICS=True
ENABLE_CRISIS_ALERTS=True

# Crisis Helplines (for display)
CRISIS_PHONE=988
CRISIS_TEXT=741741
EMERGENCY_NUMBER=911
